<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ef_grey">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_list"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/home_button_search"
            android:layout_width="@dimen/home_button_size_small"
            android:layout_height="@dimen/home_button_size_small"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/home_button_margin_side"
            android:layout_marginTop="@dimen/home_button_margin_top"
            android:background="@drawable/search_icon"/>

        <Button
            android:id="@+id/home_button_post"
            android:layout_width="@dimen/home_button_size_large"
            android:layout_height="@dimen/home_button_size_large"
            android:layout_centerInParent="true"
            android:background="@drawable/post_icon"/>

        <Button
            android:id="@+id/home_button_my"
            android:layout_width="@dimen/home_button_size_small"
            android:layout_height="@dimen/home_button_size_small"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/home_button_margin_side"
            android:layout_marginTop="@dimen/home_button_margin_top"
            android:background="@drawable/profile_icon"/>

    </RelativeLayout>

</RelativeLayout>