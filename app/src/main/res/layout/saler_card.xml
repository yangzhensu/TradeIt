<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/saler_card_height"
    android:padding="@dimen/standard_padding">

    <ImageView
        android:id="@+id/saler_card_profile_photo"
        android:layout_width="@dimen/saler_card_profile_photo_size"
        android:layout_height="@dimen/saler_card_profile_photo_size"
        android:layout_margin="@dimen/standard_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/standard_margin">

        <TextView
            android:id="@+id/saler_card_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/saler_card_text_height" />

    </LinearLayout>

</LinearLayout>